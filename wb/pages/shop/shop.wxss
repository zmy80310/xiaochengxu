.cart{
  background:#f2f2f2;
}
.unLog{
  padding-top:100rpx;
}
.unLog>view{
  margin:0 auto;
  margin-bottom:80rpx;

}
.unLog>.log-cart{
  width:200rpx;
  height:200rpx;
  border-radius:50%;
  background:#ccc;
  display: flex;
  justify-content: center;
  align-items: center;
}
.log-cart>image{
  width:100rpx;
  height:100rpx;
}
.log-text{
  font-size:40rpx;
  text-align:center;
}
.log-btn{
  width:600rpx;
  height:100rpx;
  border-radius:10rpx;
  background:#ff6700;
  color:#fff;
  font-size:40rpx;
  text-align:center;
  line-height:100rpx;
}
.loged{
  padding-top:20rpx;
}
.pay-item{
  display:flex;
  justify-content: space-between;
  align-items: center;
  height:100rpx;
  width:100%;
  position:fixed;
  left:0;
  bottom:0;
  z-index: 999;
  background:#fff;
}
.pay-item>checkbox{
  margin-left:20rpx;
}
.pay-item>view{
  height:100%;
  display:flex;
  justify-content: space-between;
  align-items: center;
  font-size:32rpx;
}
.all-price{
  color:red;
  font-size:26rpx;
  margin-right:20rpx;
}
.btn-pay{
  width:180rpx;
  height:100%;
  line-height:100rpx;
  color:#fff;
  background:#ddd;
  text-align:center;
}
