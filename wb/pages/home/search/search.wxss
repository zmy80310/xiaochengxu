/* pages/search/search.wxss */
page{
   background-color: #f9f9f9;
}
.hidden{
   display: none;
}
/* 搜索框 */
.weui-search-bar{
   background-color: #f9f9f9;
   border: none;
}
.weui-search-bar__form{
   border-radius: 30rpx;
}
.weui-search-bar__cancel-btn{
 color: black;
 font-size: 28rpx;
}
 
/* 搜索标签 */
.search-tages{
  width: 100%;
   display: flex;
   justify-content:left;
   flex-flow: wrap;
   padding: 45rpx 15rpx;
}
.search-tages view{
  text-align: center;
   width: 23%;
   margin: 8rpx  5rpx;
   border-radius:25rpx;
   background-color:#fff;
}
.search-tages text{
   font-size: 25rpx;
   padding: 10rpx;
}
.search-tages>image{
  width: 95%;
  height: 300rpx;
}