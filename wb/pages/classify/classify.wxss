.classify{
  width:100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
  flex-wrap:wrap;
  margin-top:  80rpx;
}
.hone-inp{
  position: relative;
  width:80%;
  background-color: #eee;
  height: 60rpx;
  opacity:1;
  text-align: center;
  line-height: 60rpx;
  z-index: 999;
  border-radius: 30rpx;
  margin:0 auto;
}
.icon{
    position: absolute;
    top:15rpx;
    left:40rpx;
}
.home-text{
  font-size: 24rpx;
  color:#050505;
}
.cl-item{
  width:33.3%;
  text-align: center;
  margin-bottom: 60rpx;
}
.cl-img{
    width:152rpx;
    height:152rpx;
}
.cl-text{
  font-size: 26rpx;
  color:#666;
}